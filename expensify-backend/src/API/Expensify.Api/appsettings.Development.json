{
  "ConnectionStrings": {
    "Database": "Host=Expensify.database;Port=5432;Database=Expensify;Username=postgres;Password=postgres;Include Error Detail=true",
    "Cache": "Expensify.redis:6379"
  },
  "AuthSettings": {
    "Key": "your_secret_key_here_change_it_please",
    "Issuer": "DevTips",
    "Audience": "DevTips"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Enrichers.Thread", "Serilog.Enrichers.Environment", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Expensify.Modules.Users.Infrastructure.Outbox": "Warning",
        "Expensify.Modules.Users.Infrastructure.Inbox": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console"

      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://Expensify.seq:5341" }
      }
    ],
    "Properties": {
      "Application": "ExpensifyApi"
    }
  },
  "OTEL_EXPORTER_OTLP_ENDPOINT": "http://Expensify.jaeger:4317"
}
